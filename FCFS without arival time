
#include<bits/stdc++.h>
using namespace std;

void waitime(int bt[],int p,int wt[],int avwt)
{
    int temp=0;
    wt[0]=0;
    for(int i=1;i<p;i++)
    {
        wt[i]=0;
        for(int j=0;j<i;j++)
        {
            wt[i]=wt[i]+bt[j];
        }
        
    }
    cout<< "Waiting time"<<endl;
    for(int i=0;i<p;i++)
    {
        avwt=wt[i]+avwt;
        temp=avwt/p;
        
        cout<<wt[i]<<endl;
        
    }
    cout<< "average time "<< temp<< endl;
}
void tempat(int bt[],int p,int wt[],int tat[] ,int avtat)
{
    int trmp;
    cout<<"turnaround time"<<endl;
    for (int i=0;i<p;i++)
    
    {
        tat[i]=bt[i]+wt[i];
        cout<<tat[i]<<endl;
        avtat=tat[i]+avtat;
        trmp=avtat/p;
        
        
    }
    cout<< "average time "<< trmp<< endl;
}
int main()

{
    int wt[100],bt[100],avwt=0,avtat=0,tat[100];
    int p,b;
    cout<<"Enter the number of process "<< endl;
    cin>>p;
   
   
    cout<<"Enter the burst time of process"<< endl;
    for(int i=0;i<p;i++)
    {
        cin>>bt[i];
    }
    waitime(bt,p,wt,avwt);
    tempat(bt,p,wt,tat,avtat);
    return 0;
}
